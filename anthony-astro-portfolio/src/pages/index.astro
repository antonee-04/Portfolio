---
import Base from "../layouts/Base.astro";
import ProjectCard from "../components/ProjectCard.astro";
---
<Base title="Anthony Grummett — Game Programmer" description="Gameplay/Console programmer portfolio: systems, proc-gen, tools, performance.">
  <section class="hero">
    <h1>Anthony Grummett — <span style="opacity:.8">Gameplay / Console Programmer</span></h1>
    <p>Procedural generation, systems programming, performance, and tools. Unity • C#.</p>
    <div class="cta">
      <a class="button" href="/projects">View Projects</a>
      <a class="button secondary" href="/Anthony_Grummett_CV.pdf">Download CV</a>
    </div>
  </section>

  <section>
    <h2>Selected Projects</h2>
    <div class="grid">
      <ProjectCard href="/projects/divecraft" title="DiveCraft — Blocky Waves & Procedural Islands" blurb="Perlin terrain + custom block-wave system; chunk meshing & culling for stable frame times." tags={['Unity','C#','Proc Gen','Performance']} image="/media/divecraft-hero.jpg" />
      <ProjectCard href="/projects/ai-grid" title="AI Grid Pathfinding" blurb="Custom grid graph, A*, terrain sampling, and debug overlays; fixed spikes & GC churn." tags={['Unity','AI','A*','Tools']} image="/media/aigrid-thumb.jpg" />
      <ProjectCard href="/projects/tools" title="Editor Tools & Profiling" blurb="Mesh combine utility, capture scripts, build-size trims, and validation tooling." tags={['Unity','Editor','DX']} image="/media/tools-thumb.jpg" />
    </div>
    <p style="margin-top:8px;">More demos live on my Wix site: <a href="https://anthonygrummett818.wixsite.com/grummettgames" target="_blank" rel="noopener">Grummett Games</a>.</p>
  </section>
</Base>
