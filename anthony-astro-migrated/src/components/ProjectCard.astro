---
export interface Props { href:string; title:string; blurb:string; tags?:string[]; image?:string; }
const { href, title, blurb, tags = [], image }: Props = Astro.props;
---
<a class="card" href={href}>
  {image ? <img src={image} alt={title} loading="lazy" /> : null}
  <h3>{title}</h3>
  <p>{blurb}</p>
  {tags.length ? <div class="tags">{tags.map(t => <span class="tag">{t}</span>)}</div> : null}
</a>
